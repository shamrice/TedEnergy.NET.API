<Window x:Class="PowerMonitoringUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Power Monitoring Export Utility" Height="350" Width="500">
    <Grid>
        <ScrollViewer HorizontalAlignment="Left">
            <TextBlock Name="DebugTextBlock" Width="400" Height="auto"  ScrollViewer.CanContentScroll="True"></TextBlock>
        </ScrollViewer>
        <Button Name="ExportButton" Width="75" Height="50" HorizontalAlignment="Right" Click="ExportButton_Click">Export</Button>
    </Grid>
</Window>
