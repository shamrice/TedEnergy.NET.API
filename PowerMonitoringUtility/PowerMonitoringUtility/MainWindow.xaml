<Window x:Class="PowerMonitoringUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Power Monitoring Export Utility" Height="120" Width="200">
    <Grid >

        <Button Name="ExportButton" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ExportButton_Click" Background="Green">START</Button>        

        <ScrollViewer HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <TextBlock Name="DebugTextBlock" Width="400" Height="auto"  ScrollViewer.CanContentScroll="True"></TextBlock>
        </ScrollViewer>

    </Grid>
</Window>
